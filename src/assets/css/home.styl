/*首页样式*/
@import "theme.styl"
.datainfo_box
  margin 32px;
  background white
  border-radius 24px
  box-sizing border-box
  padding 32px
  .headerTool
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items flex-start
    color $mainColor
    .tools_btn
      li
        display inline-block
        width 36px
        height 36px
        background-repeat no-repeat
        background-size auto 100%
        background-position center
        margin-right 20px
        &:last-child
          margin-right 0px
        &.tool
          bg-image('./src/assets/img/money-select')
        &.date
          bg-image('./src/assets/img/money-time')
  .row_box
    min-height 156px
    box-sizing border-box
    padding 32px
    box-shadow:0px 0px 16px 0px rgba(237,237,237,1);
    border-radius:16px;
    display flex
    flex-flow row nowrap
    justify-content space-between
    align-items flex-start
    margin-bottom 32px
    &:last-child
      margin-bottom 0px
  .show_box
    margin 100px auto
    min-height 400px
    background-size auto 90%
    text-align center
    display flex
    flex-flow column nowrap
    align-items center
    justify-content center
    bg-image('./src/assets/img/money-background')

.collectingSearch
  height 100%
  width 100%
  display flex
  flex-flow column nowrap
  justify-content flex-start
  align-items flex-start
  overflow hidden
  .searchHeader
    width 100%
    background white
    box-shadow inset 0px 4px 8px 0px rgba(0,0,0,0.15)
    .allinfo
      background #F5F5F5
      padding 32px
      li
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items center
        line-height 60px
        font-size 28px
        cite
          height 60px
          width 60px
          background-size auto 60%
          &.tool
            bg-image('./src/assets/img/money-select')
          &.date
            bg-image('./src/assets/img/money-time')
  .list_box
    flex 1
    width 100%
    background white
    position relative
    overflow-y auto
    li
      list-style none
      box-sizing border-box
      bd-d(#E8E8E8)
      position relative
      .tag_box
        position absolute
        left 0px
        top: 0px
        width 64px
        height 64px
        background-size 100% auto
      .get_box
        bg-image('./src/assets/img/money-shoujian')
      .send_box
        bg-image('./src/assets/img/money-jijian')
      .tag
        display flex
        flex-flow row nowrap
        justify-content space-between
        align-items flex-start
        padding 32px
        div
          flex 1
          display flex
          flex-flow row nowrap
          justify-content flex-start
          align-items center
          cite
            font-size 24px
            padding 3px 5px
            background #5B8AED
            color white
            border-radius 4px
            margin-left 8px
        span
          p
            text-align right

