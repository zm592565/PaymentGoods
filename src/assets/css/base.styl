@import "reset.styl";
@import "var.styl"
/*公共样式*/
#app
  height 100%;
  background #f5f5f5;
  overflow hidden;
  position relative
  #box_content
    height 100%
    z-index 999
    overflow hidden
    font-size 14px
    flex_clunms()
    position absolute
    top 0px
    left 0px
    bottom 0px
    right 0px
    box-shadow: 0px 0px 40px rgba(128,128,128,0.4)
    &.slide-enter-active, &.slide-leave-active
      transition: all 0.3s
    &.slide-enter, &.slide-leave-to
      transform: translate3d(100%, 0, 0)
    .main_box
      flex 1
      overflow auto


@keyframes rotatefresh
  0%
    transform: rotate(0deg);
  100%
    transform: rotate(270deg);


/*进场离场效果*/
.slide-enter-active,.slide-leave-active{
  transition: all 0.3s
}
.slide-enter, .slide-leave-to{
  transform: translate3d(100%, 0,0)
}

.clearfix:after{content:".";display:block;height:0;clear:both;visibility:hidden}.cl,.clearfix{zoom:1}
